

.inv-fieldSet
    border 1px solid #24282b
    padding inherit
    border-radius $radius
    margin-bottom 20px
    .inv-legend
        width auto
        margin 0
        color $black
        font-size: 18px
    .inv-categories
        .inv-category-name
            font-size 18px
            margin-bottom  8px
            padding 0 8px !important
        .inv-category-group-wrapper
            display flex 
            flex-wrap wrap
            justify-content space-between
            .inv-category-group
                padding 0 8px !important
                .inv-group-cell
                    position relative
                    margin-bottom 20px
                    padding-top 100%
                    position relative
                    width 100%;
                    border-radius $radius
                    .inv-group-cell-text
                        position absolute
                        left 0
                        top 0
                        display flex
                        align-items flex-end
                        padding 8px
                        border-radius $radius
                        width 100%
                        height 100%
                        font-size 15px
                        transition all 1s                       
                        &:hover
                            background-color $white
                            .inv-group-cell-overlay
                                opacity 1
                                transition all 1s
                    .inv-group-cell-colorpicker
                        position: absolute;
                        top: 0;
                        left: 0
                        height: 100%;
                        width: 100%
                        opacity: 0;
                        cursor pointer
                        cursor url
                    ::ng-deep
                        .colorpick-eyedropper-input-trigger
                            display: none
                    
.row
    margin 0 -15px